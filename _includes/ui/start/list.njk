<div class="tab-pane fade" id="pills-list" role="tabpanel" aria-labelledby="pills-list-tab" tabindex="0">
<div class="row">
<div class="my-3 p-1">
<div id="post-list-list">
{%- for post in pagination.items %}
<div class="pb-3 pt-3 mb-0 small lh-sm border-bottom w-100">
<div class="d-flex justify-content-between">
<h3><strong class="text-gray-dark"><a href="{{ post.url }}">{{ post.data.title }}</a></strong></h3>
<a href="{{ post.url }}" class="p-3">Read</a>
</div>
<p>Reading Time: <span class="reading-time"></span></p>
<p class="article-stats"></p>
<p class="text-post" style="display: none;">{{ post.content | stripHtml }}</p>
</div>
{% endfor -%}
</div>
<div class="row mt-3">
<div class="col-md-12 text-center mb-4" id="pagination-list">
{% if pagination.href.next %}<a class="btn btn-lg btn-dark load-more" href="{{ pagination.href.next }}">Load More</a>{% endif %}
</div>
</div>
</div>
</div>
</div>